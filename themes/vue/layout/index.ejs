<div id="hero">
  <div class="inner">
    <div class="left">
      <img class="hero-logo" src="<%- url_for("/images/logo.png") %>">
    </div><div class="right">
      <h2 class="vue"><%= __('index.title') %></h2>
      <h1><%- __('index.tagline') %></h1>
      <p>
        <a class="button" href="<%- url_for("/v2/guide/") %>"><%= __('index.started') %></a>
        <a class="button white" href="https://github.com/vuejs/vue" target="_blank"><%= __('index.github') %></a>
      </p>
